-
  const TInputProps = {
    className: string,
    type: 'text' | 'password',
    size: 'small' | 'middle' | 'large',
    placeholder: string,
  }

mixin Input({ className = '', type = 'text', size = 'middle', placeholder = '' })
  .Input(class=`${className} ${size}`)
    input(type=`${type}` placeholder=`${placeholder}`).Input-control